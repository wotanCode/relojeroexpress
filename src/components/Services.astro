---
import { useI18n } from "../i18n/i18n";

const t = useI18n(Astro);
---

<section id="servicios" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12 opacity-0" id="servicesTitle">
      {t("services.title")}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="service-card bg-white p-6 rounded-lg shadow-lg transform hover:-translate-y-2 transition-transform duration-300 opacity-0">
        <div class="text-[#0197d5] text-4xl mb-4">
          <i class="fas fa-tools" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-semibold text-[#1e1c1d] mb-3">
          <span aria-label={t("aria.services.repair_icon")}>{t("services.repair_title")}</span>
        </h3>
        <p class="text-gray-600">
          {t("services.repair_description")}
        </p>
      </div>

      <div class="service-card bg-white p-6 rounded-lg shadow-lg transform hover:-translate-y-2 transition-transform duration-300 opacity-0">
        <div class="text-[#0197d5] text-4xl mb-4">
          <i class="fas fa-clock" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-semibold text-[#1e1c1d] mb-3">
          <span aria-label={t("aria.services.maintenance_icon")}>{t("services.maintenance_title")}</span>
        </h3>
        <p class="text-gray-600">
          {t("services.maintenance_description")}
        </p>
      </div>

      <div class="service-card bg-white p-6 rounded-lg shadow-lg transform hover:-translate-y-2 transition-transform duration-300 opacity-0">
        <div class="text-[#0197d5] text-4xl mb-4">
          <i class="fas fa-battery-full" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-semibold text-[#1e1c1d] mb-3">
          <span aria-label={t("aria.services.battery_icon")}>{t("services.battery_title")}</span>
        </h3>
        <p class="text-gray-600">
          {t("services.battery_description")}
        </p>
      </div>

      <div class="service-card bg-white p-6 rounded-lg shadow-lg transform hover:-translate-y-2 transition-transform duration-300 opacity-0">
        <div class="text-[#0197d5] text-4xl mb-4">
          <i class="fas fa-link" aria-hidden="true"></i>
        </div>
        <h3 class="text-xl font-semibold text-[#1e1c1d] mb-3">
          <span aria-label={t("aria.services.strap_icon")}>{t("services.strap_title")}</span>
        </h3>
        <p class="text-gray-600">
          {t("services.strap_description")}
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  document.addEventListener("DOMContentLoaded", () => {
    gsap.registerPlugin(ScrollTrigger);

    gsap.to("#servicesTitle", {
      scrollTrigger: {
        trigger: "#servicesTitle",
        start: "top 80%",
      },
      y: 0,
      opacity: 1,
      duration: 1,
    });

    gsap.to(".service-card", {
      scrollTrigger: {
        trigger: ".service-card",
        start: "top 80%",
      },
      y: 0,
      opacity: 1,
      duration: 1,
      stagger: 0.2,
    });
  });
</script>
