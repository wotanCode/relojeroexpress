---
import { useI18n } from "@/i18n/i18n";
import { COMPANY_INFO } from "@/constants/contact";
import Noise from "@/components/Noise.astro";

const t = useI18n(Astro);
---

<section id="inicio" class="relative h-[600px] bg-[#1e1c1d] flex items-center">
  <Noise />

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center">
      <h1
        class="text-5xl md:text-6xl font-bold text-white mb-6 opacity-0"
        id="heroTitle"
      >
        {COMPANY_INFO.NAME}
      </h1>
      <p
        class="text-xl md:text-2xl text-gray-300 mb-8 opacity-0 max-w-2xl mx-auto"
        id="heroText"
      >
        {t("hero.subtitle")}
      </p>
      <a
        href="#contacto"
        class="inline-block bg-[#0197d5] text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-[#0185bd] transition-colors duration-300 opacity-0 transform translate-y-4"
        id="heroButton"
        aria-label={t("aria.navigation.contact")}
      >
        {t("hero.contact")}
      </a>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    gsap.to("#heroTitle", {
      opacity: 1,
      y: 0,
      duration: 1,
      delay: 0.2,
    });

    gsap.to("#heroText", {
      opacity: 1,
      y: 0,
      duration: 1,
      delay: 0.4,
    });

    gsap.to("#heroButton", {
      opacity: 1,
      y: 0,
      duration: 1,
      delay: 0.6,
    });
  });
</script>
