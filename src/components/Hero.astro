---
import { useI18n } from "../i18n/i18n";
import { COMPANY_INFO } from "../constants/contact";

const t = useI18n(Astro);
---

<section id="inicio" class="relative h-[600px] bg-[#1e1c1d] flex items-center justify-center overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center">
      <h1
        class="text-5xl md:text-7xl font-bold text-white mb-6 opacity-0"
        id="heroTitle"
      >
        {t("hero.title")}
      </h1>
      <p
        class="text-xl md:text-2xl text-[#0197d5] mb-8 opacity-0"
        id="heroSubtitle"
      >
        {t("hero.subtitle")}
      </p>
      <div class="space-x-4 opacity-0" id="heroCta">
        <a
          href="#servicios"
          class="bg-[#0197d5] text-white px-8 py-3 rounded-lg hover:bg-[#0175a3] transition-colors"
        >
          {t("hero.services")}
        </a>
        <a
          href="#contacto"
          class="border-2 border-[#0197d5] text-white px-8 py-3 rounded-lg hover:bg-[#0197d5] transition-colors"
        >
          {t("hero.contact")}
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    gsap.to("#heroTitle", {
      y: 0,
      opacity: 1,
      duration: 1,
      delay: 0.5,
    });

    gsap.to("#heroSubtitle", {
      y: 0,
      opacity: 1,
      duration: 1,
      delay: 0.8,
    });

    gsap.to("#heroCta", {
      y: 0,
      opacity: 1,
      duration: 1,
      delay: 1.1,
    });
  });
</script>
