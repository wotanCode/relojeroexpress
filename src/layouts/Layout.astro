---
import "@/assets/global.css";
import SEO from "@/components/SEO.astro";

interface Props {
	title: string;
}

const seoData = {
	title: Astro.props.title || "Relojero Express", // Usamos el title del layout si está presente
	description: "Bienvenido a la página principal de mi sitio web",
};
---

<!doctype html>
<html lang="es">
	<head>
		<SEO {...seoData} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
