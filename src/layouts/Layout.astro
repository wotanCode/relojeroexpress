---
import { getLocale } from "astro-i18n-aut";

import SEO from "@/components/SEO.astro";

import "@/styles/global.css";

interface Props {
	title?: string;
	description?: string;
}

const lang = getLocale(Astro.url);

const seoData = {
	title: Astro.props.title || "Relojero Express",
	description:
		Astro.props.description ||
		"Venta, mantenimiento y reparaci√≥n de relojes en Buenos Aires",
};
---

<!doctype html>
<html lang={lang}>
	<head>
		<SEO {...seoData} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
